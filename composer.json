{
  "name": "arkye/support",
  "description": "Arkye Support Package",
  "keywords": [
    "arkye",
    "helpers",
    "support"
  ],
  "homepage": "https://github.com/arkye/support",
  "license": "MIT",
  "authors": [
    {
      "name": "Gustavo Siqueira",
      "email": "gus@brid-it.com"
    }
  ],
  "require": {
    "php": "^8.0|^8.1",
    "illuminate/support": "^8.0|^9.0",
    "spatie/data-transfer-object": "^3.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.4"
  },
  "autoload": {
    "psr-4": {
      "Arkye\\Support\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Arkye\\Support\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
